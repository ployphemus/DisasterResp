    <title>Change Email - ShelterSafe</title>
    <link rel="stylesheet" href="/styles/login_style.css" />
  </head>
  <body>
    <!-- Content -->
    <img src="/logo.png" alt="logo" width="700" class="center" /><br />
    <form action="/auth/changing-email" method="post">
      <div class="form-group">
        <input type="email" class="form-control" id="email" aria-describedby="email" placeholder="Current Email Address" name="Email">
      </div>
      </div>
      <!--Send link should send email to the user's email without redirecting,
      Cancel should redirect user back to main page-->
      <small id="email" class="text-muted">
        Must be a valid email
      </small><br>
      <button type="submit" class="btn btn-primary">Send Link</button>
      <button type="button" class="btn btn-danger"><a href="/">Cancel</a></button>
      
    </form>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
